{
  "name": "@repo/db",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check": "tsc --noEmit",
    "db:generate": "pnpm prisma generate",
    "db:deploy": "pnpm prisma migrate deploy",
    "db:migrate": "pnpm prisma migrate dev -- --skip-generate",
    "db:seed": "pnpm prisma db seed",
    "db:reset": "pnpm prisma migrate reset --force"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "typescript": "^5.9.2"
  },
  "exports": {
    "./data/*": "./src/data/*.ts",
    "./types": "./prisma/generated/client.ts"
  },
  "imports": {
    "#prisma/*": "./prisma/*.ts",
    "#controllers/*": "./src/controllers/*.ts"
  }
}
